---
import { type Team } from '@/const/f1-info'
const { data } = Astro.props as { data: Team[] }
import DriversContainer from '@/components/DriversContainer.tsx'
---

<div class='flex flex-col items-center justify-center gap-y-8'>
  <div class='flex flex-col items-center justify-center gap-y-4 p-4'>
    <h2
      class='text-2xl md:text-3xl lg:text-4xl font-extrabold text-neutral-200'
    >
      Pilotos de F1 2025
    </h2>
    <p
      class='text-center text-md lg:text-lg max-w-3xl font-bold text-neutral-300'
    >
      Echa un vistazo a la alineaci√≥n oficial de F1 de esta temporada. Desglose
      completo de pilotos, puntos y posiciones actuales. Sigue a tus pilotos de
      F1 favoritos dentro y fuera de la pista.
    </p>
  </div>

  <div
    class='h-[2px] w-full bg-gradient-to-r from-transparent via-[#f41d00]/60 to-transparent'
  >
  </div>

  <DriversContainer teams={data} client:load />
</div>
