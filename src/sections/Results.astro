---
import ResultsContainer from '@/components/ResultsContainer'
import { type Team } from '@/const/f1-info'
const { data } = Astro.props as { data: Team[] }
---

<div class='flex flex-col items-center justify-center gap-y-6'>
  <div class='flex flex-col items-center justify-center p-4'>
    <h2
      class='text-2xl md:text-3xl lg:text-4xl font-extrabold text-neutral-200'
    >
      Resultados de la temporada 2025
    </h2>
  </div>

  <div
    class='h-[2px] w-full bg-gradient-to-r from-transparent via-[#f41d00]/60 to-transparent'
  >
  </div>

  <ResultsContainer teams={data} client:load />
</div>
